@using KitchenCloud.Models.Shared;
@model LoginUserModel


<div class="modal fade" id="loginModal" style="margin-top: 110px;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title text-center"><span class="glyphicon glyphicon-log-in"></span> <strong>LogIn</strong></h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="container col-lg-10 col-lg-offset-1">
                        @using (Html.BeginForm("LogIn", "Dashboard"))
                        {
                            <div class="form-group">
                                @Html.LabelFor(x => x.UserName, new { @class = "text-muted" })
                                @Html.ValidationMessageFor(x=>x.UserName,null,new {@class="text-danger"})
                                <div class="input-group">

                                    @Html.TextBoxFor(x => x.UserName, null, new { @class = "form-control" })
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Password, new { @class = "text-muted" })
                                @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
                                <div class="input-group">

                                    @Html.PasswordFor(x => x.Password, new {@class = "form-control"})
                                    <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>

                                </div>
                                </div>

                                <br/>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <button type="submit" class="btn btn-primary">Login</button>
                                        </div>
                                        <div class="col-lg-3">
                                            <a data-toggle="modal" data-target="#SignupModal " class="btn btn-default" >Register</a>
                                        </div>
                                    </div>
                                </div>
                        }
                            </div>
                </div>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>

