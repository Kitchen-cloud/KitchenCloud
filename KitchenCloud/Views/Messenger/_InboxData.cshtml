<script src="~/Scripts/jquery-2.2.3.min.js"></script>
<script>
    $(".InboxMsg").click(function () {

        $.ajax({

            url: "/Messenger/ChatInInbox/" +$(this).data("chatwithid"),
            method: "Get"
        }).done(function (result) {

            window.parent.$("#MessageAppMain").html(result);
            
        }).error(function () {
            alert("failed");
        });
    });
</script>